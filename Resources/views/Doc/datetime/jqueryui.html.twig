{% extends 'BootstrappBundle:Doc:demo.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets
    "@BootstrappBundle/Resources/public/less/jdewit-timepicker.less"
    %}
    <link href="{{ asset_url }}" type="text/css" rel="stylesheet" media="screen" />
    {% endstylesheets %}
{% endblock stylesheets %}

{% block header %}
    {% set breadcrumb = [{'text':'jQuery', 'url':path('bootstrapp_jqueryui')}]|merge(breadcrumb) %}
    {{ parent() }}
{% endblock header %}

{% block content %}
    <h4>jQuery UI</h4>
    <p>Resources
    <ul>
        <li>jQuery official website : <a href="http://jqueryui.com">http://jqueryui.com</a></li>
        <li>Twitter Bootstrap theme for jQuery : <a href="http://addyosmani.github.com/jquery-ui-bootstrap">http://addyosmani.github.com/jquery-ui-bootstrap</a></li>
    </ul>
    </p>
    <h5>jQuery UI datepicker</h5>
    <div class="well">
        {{ form_row(form.date) }}
        {{ form_row(form.time) }}
        {{ form_row(form.datetime) }}
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('bundles/bootstrapp/js/jdewit-timepicker.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/bootstrapp/js/bootstrapp-jdewit.js') }}"></script>
{% endblock javascripts %}