{% if locales|length > 1 %}
    <a data-toggle="dropdown" class="dropdown-toggle flag-{{ locale|slice(-2)|lower }}" href="#">{{ locales[locale] }} <b class="caret"></b></a>
    <ul class="dropdown-menu">
        {% for code, label in locales %}
            {% if code != locale %}
                <li>
                    <a href="{{ path(route, routeParams|merge({'_locale' : code})) }}" class="flag-{{ code|slice(-2)|lower }}">{{ label }}</a>
                </li>
            {% endif %}
        {% endfor %}
    </ul>
{% endif %}